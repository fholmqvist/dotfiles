{
  /*
        APPEARANCE
  */

  "workbench.iconTheme": "material-icon-theme",

  "editor.fontFamily": "Berkeley Mono",
  "editor.fontSize": 16,

  "workbench.colorTheme": "Infinity Dark",
  "editor.fontLigatures": true,
  "editor.fontWeight": 100,
  "editor.cursorStyle": "block",
  "editor.cursorBlinking": "solid",
  "editor.guides.indentation": false,
  "editor.bracketPairColorization.enabled": false,

  /*
          BEHAVIOUR
  */

  "editor.acceptSuggestionOnCommitCharacter": true,
  "editor.acceptSuggestionOnEnter": "on",

  /*
          TURNING OFF FEATURES
  */

  "window.titleBarStyle": "custom",
  "window.customMenuBarAltFocus": false,
  "editor.minimap.enabled": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "workbench.startupEditor": "none",
  "html.autoCreateQuotes": false,
  "javascript.preferences.quoteStyle": "single",
  "liveServer.settings.donotShowInfoMsg": true,
  "extensions.ignoreRecommendations": true,

  /*
          FILE SETTINGS
  */

  "files.insertFinalNewline": true,
  "files.watcherExclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/.hg/store/**": true,
    "**/__mocks__/**": true,
    "**/__generated__/**": true
  },
  "search.exclude": {
    "**/.git/objects/**": true,
    "**/.git/subtree-cache/**": true,
    "**/node_modules/**": true,
    "**/bower_components": true,
    "**/*.code-search": true
  },
  "files.associations": {
    "*.go": "go",
    "*.html": "html",
    "*.qtpl": "html",
    "*.heex": "phoenix-heex",
    "*.gohtml": "go",
    "*.lock": "yaml",
    "*.gost": "lisp"
  },

  /*
          TERMINAL
  */

  "terminal.integrated.fontFamily": "monospace",
  "terminal.integrated.scrollback": 25000,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "terminal.integrated.env.linux": {
    "EDITOR": "code --wait",
    "GIT_EDITOR": "code --wait"
  },

  /*
          CALVA
  */

  "calva.showCalvaSaysOnStart": false,
  "calva.paredit.hijackVSCodeDefaults": true,
  "calva.jackInEnv": {
  },

  /*
          LANGUAGE SPECIFIC
  */

  "go.toolsManagement.autoUpdate": true,
  "[go]": {
    "editor.tabSize": 8
  },
  "FSharp.inlayHints.enabled": false,
  "FSharp.inlayHints.parameterNames": false,
  "FSharp.inlayHints.typeAnnotations": false,
  "FSharp.pipelineHints.enabled": false,
  "FSharp.codeLenses.references.enabled": false,
  "FSharp.codeLenses.signature.enabled": false,
  "[lua]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[fennel]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[janet]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[ocaml]": {
    "editor.defaultFormatter": "ocamllabs.ocaml-platform",
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[crystal]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2
  },
  "[ruby]": {
    "editor.detectIndentation": false,
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.semanticHighlighting.enabled": true
  },
  "[erlang]": {
    "editor.defaultFormatter": "erlang-ls.erlang-ls",
    "editor.codeLens": false
  },
  "rust-analyzer.inlayHints.parameterHints.enable": false,
  "rust-analyzer.inlayHints.typeHints.enable": false,
  "rust-analyzer.inlayHints.closingBraceHints.enable": false,
  "rust-analyzer.inlayHints.chainingHints.enable": false,
  "rust-analyzer.lens.enable": false,
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "C_Cpp.default.includePath": ["${workspace}/**", "/usr/local/include/**"],
  "security.workspace.trust.untrustedFiles": "open",
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.semi": false,
  "prettier.singleQuote": true,
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[elixir]": {
    "editor.tabSize": 2
  },
  "elixirLS.suggestSpecs": false,
  "elixirLS.dialyzerEnabled": true,
  "elixirLS.signatureAfterComplete": true,
  "elixirLS.fetchDeps": false,
  "terminal.external.linuxExec": "st",
  "[scss]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  /*
          REMOVE ITALICS, BOLD FROM THEMES
  */

